# WasteWise - Smart Waste Management System
# Environment Configuration

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,*.wastewise.gh

# Database Configuration (PostgreSQL with PostGIS)
DB_NAME=wastewise
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# MQTT Configuration for IoT Sensors
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=wastewise_user
MQTT_PASSWORD=your-mqtt-password

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHERMAP_API_KEY=your-weather-api-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@wastewise.gh

# Push Notifications
FCM_API_KEY=your-firebase-cloud-messaging-key
APNS_CERTIFICATE=path/to/your/apns/certificate.pem

# File Storage (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=wastewise-media
AWS_S3_REGION_NAME=us-east-1

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Production Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Domain Configuration
DOMAIN_NAME=wastewise.gh
API_DOMAIN=api.wastewise.gh
DASHBOARD_DOMAIN=dashboard.wastewise.gh

# Social Authentication (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret

# SMS/WhatsApp Integration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_API_TOKEN=your-whatsapp-api-token